<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="stats">
      </section>
		</aside>
	</div>
<% else %>
<div class="center jumbotron" id="background_image">
  <h1>Welcome to Rentalcars DaNang</h1>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<h1>Listing Cars</h1>
    <%= form_tag cars_search_path, :method => 'get'  do %>
   	<%= text_field_tag :search, params[:search]%>
    <%= submit_tag "Search" %>
	<% end %>	
<%= link_to "Advanced Search" , new_search_path %>
<ul class="cars">
   <%= render @cars%>
</ul>
<% end %>
