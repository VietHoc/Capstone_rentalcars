<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<h1>Listing Cars</h1>
    <%= form_tag cars_search_path, :method => 'get'  do %>
   		<%= text_field_tag :search, params[:search]%>
    	<%= submit_tag "Search" %>
    <% end %>
<%= link_to "Advanced Search" , new_search_path %>

<% provide(:title, 'All car') %>
<ul class="cars">
   <%= render @cars%>
</ul>
	
  
